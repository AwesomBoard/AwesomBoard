{
  "name": "EveryBoard",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration=debug",
    "start:emulator": "bash ./scripts/start-in-emulator.sh",
    "build": "ng build --configuration=production",
    "build:netlify": "ng build --configuration=debug",
    "build:dev": "ng build --configuration=production,dev",
    "build:test": "ng build --configuration=test",
    "test": "bash ./scripts/test.sh",
    "test:ci": "bash ./scripts/test.sh --watch=false --browsers=ChromeHeadlessCustom --configuration=ci",
    "libtest": "cd lib && npm test",
    "libtest:ci": "cd lib && npm ci && npm test && npm run coverage",
    "lint": "eslint --ext ts ./ --quiet",
    "e2e": "python ./e2e/launch.py"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "@everyboard/lib": "file:lib",
    "@fortawesome/angular-fontawesome": "^0.15.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "async-mutex": "^0.5.0",
    "bulma": "^1.0.2",
    "bulma-toast": "^2.4.4",
    "bulmaswatch": "^0.8.1",
    "core-js": "^3.38.0",
    "firebase": "^10.12.5",
    "firebase-tools": "^13.15.1",
    "rxjs": "^7.8.1",
    "zone.js": "^0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.0",
    "@angular-eslint/builder": "^18.3.0",
    "@angular-eslint/eslint-plugin": "^18.3.0",
    "@angular-eslint/eslint-plugin-template": "^18.3.0",
    "@angular-eslint/schematics": "^18.3.0",
    "@angular-eslint/template-parser": "^18.3.0",
    "@angular/cli": "^18.2.0",
    "@angular/compiler": "^18.2.0",
