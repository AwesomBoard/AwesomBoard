{
  "name": "EveryBoard",
  "dockerFile": "Dockerfile",
  "build": {
    "args": { "NODE_MAJOR_VERSION": "18" }
  },
  "postCreateCommand": [".devcontainer/post-create.sh"],
  "portsAttributes": {
    "4200": { "label": "EveryBoard" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Angular.ng-template",
        "dbaeumer.vscode-eslint",
        "EditorConfig.EditorConfig"
      ]
    }
  }
}
